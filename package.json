{
  "name": "manzhuxing",
  "displayName": "满猪星",
  "description": "满猪星",
  "version": "0.0.2",
  "publisher": "manasxx",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bbs",
    "community",
    "developer",
    "vscode"
  ],
  "icon": "media/vscodehub.png",
  "activationEvents": ["*"],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "vscodehub.scale": {
          "type": "number",
          "default": 1,
          "description": "缩放比例"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
          {
              "id": "vscodehub-explorer",
              "title": "满猪星",
              "icon": "media/vscodehub.svg"
          }
      ]
    },
    "views": {
        "vscodehub-explorer": [
            {
                "id": "vscodehub.readerView",
                "type": "webview",
                "name": "vscodehub"
            }
        ]
    },
    "commands": [
      {
        "command": "vscodehub.refreshEntry",
        "title": "刷新",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
          {
            "command": "vscodehub.refreshEntry",
            "when": "view == vscodehub.readerView",
            "group": "navigation@0"
          }
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/AShujiao/vscode-hub/issues",
    "email": "a916817706@live.com"
  },
  "repository": {
      "type": "git",
      "url": "https://github.com/AShujiao/vscode-hub.git"
  },
  "homepage": "https://github.com/AShujiao/vscode-hub/blob/master/README.md",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "connect": "^3.7.0"
  }
}
